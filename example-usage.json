{
  "name": "my-project",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint src/",
    "lint:regex": "regex-scan src/ --only-issues",
    "security:check": "regex-scan --severity critical",
    "security:full": "regex-scan --format json > regex-security-report.json",
    "ci:security": "regex-scan --severity high --quiet",
    "dev:regex-test": "regex-scan test-pattern"
  },
  "devDependencies": {
    "regex-security-scanner": "^1.0.0"
  }
}
