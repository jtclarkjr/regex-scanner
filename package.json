{
  "name": "regex-scanner",
  "version": "0.1.0",
  "description": "A security-focused regex scanner for JavaScript/TypeScript that detects, validates, and analyzes regex patterns for ReDoS vulnerabilities",
  "main": "dist/index.js",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "regex-scan": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node",
    "start": "bun run src/cli.ts",
    "dev": "bun run src/cli.ts",
    "lint": "bun oxlint",
    "lint:ts": "bunx tsc --noEmit",
    "lint:all": "bun run lint && bun run lint:ts",
    "format": "bun prettier --write src/",
    "format:check": "bun prettier --check src/",
    "test": "bun test"
  },
  "private": true,
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.13.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
